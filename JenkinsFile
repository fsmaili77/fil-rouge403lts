pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Build') {
            steps {
                sh """
                    cd gestionnairenotes/
                    npm i
                    npm run build

                    cd ..
                    cd notesApp/notes/notes
                    mvn package
                """
            }
        }
        stage('Test') {
            steps {
                sh """
                    sudo docker rm -f spring
                    cd notesApp/
                    sudo docker build -t spring-orm .

                    sudo docker run -p 8080:8080 -d --name spring spring-orm

                    echo test

                    sudo docker stop spring
                """
            }
        }
        
        stage('Deploy') {
            steps { 
                sh """

                """         
            }
        }
    }
}

